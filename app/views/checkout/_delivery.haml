.small-12.columns.checkout-block
  .payment-header.centre-text-align
    Delivery

  = form_tag('/checkout', method: :post, id: 'checkout_detail_form') do
    .checkout-block-sub
      .small-3.columns
        Monday
      .small-9.columns
        = select_tag 'date', "<option>1</option><option>2</option><option>3</option><option>4</option>".html_safe

    .small-12.medium-12.large-12.columns.text-centre.div-radio-button-group
      #morning-delivery.small-4.medium-4.large-4.columns.div-radio-button.text-centre.active
        Morning
        = radio_button_tag 'delivery', 'morning', true, class: 'input-div-radio-button'
      #afternoon-delivery.small-4.medium-4.large-4.columns.div-radio-button.text-centre
        Afternoon
        = radio_button_tag 'delivery', 'afternoon', false, class: 'input-div-radio-button'
      #evening-delivery.small-4.medium-4.large-4.columns.div-radio-button.text-centre
        Evening
        = radio_button_tag 'delivery', 'evening', false, class: 'input-div-radio-button'