#customer_detail
  .text-centre.checkout-header
    your detail

  = form_tag('/checkout', method: :post, id: 'customer_detail_form', data: { abide: '' }, novalidate: 'novalidate') do
    .checkout-input
      = label_tag 'given_name' do
        Given Name
        = text_field_tag 'given_name', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'sure_name' do
        Sure Name
        = text_field_tag 'sure_name', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'email' do
        Email
        = text_field_tag 'email', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'address' do
        address
        = text_field_tag 'address', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'suburb' do
        suburb
        = text_field_tag 'suburb', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'city' do
        city
        = text_field_tag 'city', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'postcode' do
        postcode
        = text_field_tag 'postcode', nil, required: true, pattern: 'postcode_aus'
      %small.error
        please put in a valid postcode