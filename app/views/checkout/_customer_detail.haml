#customer_detail
  .text-centre.checkout-header
    your detail

  = form_tag('/checkout', method: :post, id: 'customer_detail_form', data: { abide: '' }, novalidate: 'novalidate') do
    .checkout-input
      = label_tag 'customer[given_name]' do
        Given Name
        = text_field_tag 'customer[given_name]', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'customer[sure_name]' do
        Sure Name
        = text_field_tag 'customer[sure_name]', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'customer[email]' do
        Email
        = text_field_tag 'customer[email]', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'customer[phone_number]' do
        Phone
        = text_field_tag 'customer[phone_number]', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'customer[address]' do
        address
        = text_field_tag 'customer[address]', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'customer[suburb]' do
        suburb
        = text_field_tag 'customer[suburb]', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'customer[city]' do
        city
        = text_field_tag 'customer[city]', nil, required: true
      %small.error
        required

    .checkout-input
      = label_tag 'customer[postcode]' do
        postcode
        = text_field_tag 'customer[postcode]', nil, required: true, pattern: 'postcode_aus'
      %small.error
        please put in a valid postcode