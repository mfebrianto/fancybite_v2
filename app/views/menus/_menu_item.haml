.large-4.medium-4.columns.menu-item
  .item-content
    .menu-img-wrapper
      %img{src: food.picture.url(:medium)}
    .menu-description-wrapper
      .small-space
      %h2
        = food.name
      .menu-description
        %p
          = food.description
      %h2.menu-price
        = food.price
      = button_tag 'Detail'