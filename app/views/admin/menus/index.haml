%table
  %thead
    %tr
      %th
        name
      %th
        description
      %th
        price
      %th
        portfolio
      %th
        featured
      %th
        image
  %tbody
    - @all_menu.each do |menu|
      %tr
        %td
          = link_to menu.name, admin_menu_path(menu.id)
        %td
          = menu.description
        %td
          = menu.price
        %td
          = menu.portfolio
        %td
          = menu.featured
        %td
          = image_tag menu.picture.url(:thumb)

= link_to 'add menu', new_admin_menu_path