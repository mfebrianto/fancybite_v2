= form_for [:admin, @menu] do |f|
  .row
    .large-4.columns
      = f.label :name
      = f.text_field :name
      = @menu.errors[:name][0] if @menu.errors[:name]

  .row
    .large-4.columns
      = f.label :description
      = f.text_field :description
      = @menu.errors[:description][0] if @menu.errors[:description]

  .row
    .large-4.columns
      = f.label :price
      = f.text_field :price
      = @menu.errors[:price][0] if @menu.errors[:price]

  .row
    .large-4.columns
      = f.label :picture
      = f.file_field :picture
      = @menu.errors[:picture][0] if @menu.errors[:picture]

  .row
    .large-4.columns
      = label_tag 'this week menu'
      = f.check_box :portfolio
  .row
    .large-4.columns
      = f.label :featured
      = f.check_box :featured

  .row
    .large-4.columns
      = f.submit