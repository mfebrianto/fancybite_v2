.row
  %h1
    this is where you put new fb upload
.row
  = form_for @social, url: admin_socials_path ,method: :post do |f|
    .small-12.columns
      = hidden_field_tag 'social_id_for_submission'
      = f.label :description
      = f.text_area :description, class: 'facebook_description'

  .small-12.columns
    = render partial: 'admin/social_images/new', locals: {social: @social}
  .small-12.columns
    = submit_tag 'submit', id: 'social_submission_button'